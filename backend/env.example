  # =============================================================================
# FastAPI Backend Environment Variables  
# Copy this file to .env for local development
# Add these variables to your Render dashboard for backend service deployment
# =============================================================================

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# Supabase Configuration (Required - No DATABASE_URL needed)
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Configuration (Required)
# Generate a strong secret key for JWT signing
JWT_SECRET_KEY=your_super_secret_jwt_key_at_least_256_bits_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration (Required)
# Set this to your frontend URL in production
CORS_ORIGINS=https://your-frontend-app.onrender.com,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=csv,xlsx,xls

# Optional: Logging and Monitoring
LOG_LEVEL=INFO
# SENTRY_DSN=https://your-sentry-dsn-for-error-tracking

# =============================================================================
# Development Only Variables (not needed in production)  
# =============================================================================
# SUPABASE_URL=https://your-local-supabase-instance.supabase.co
# CORS_ORIGINS=http://localhost:3000
# ENVIRONMENT=development
